<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-1 text-center fs-1 fw-bolder">短網址產生器</h5>
          <h6 class="card-title mb-5 text-center fs-4" style= "color:#404040" >URL Shortener</h6>
          <div class="text-center">
            <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
              class="img-fluid rounded mb-5 mt-5" style="width:30%" alt="picture of url shortener">
            <hr>
          </div>
          
          <form method="POST" action="/">
            <div class="row mb-3 g-2">
              <label for="length" class="col-md-2 col-form-label">
                網址
              </label>
              <div class="col-md-8 mb-2">
                <!-- input中加入required避免表單未填寫內容即送出-->
                <input type="url" name="url" class="form-control" id="url"  placeholder= "Enter a link here" required value="{{originalURL}}">               
              </div>
            </div>
            
            <div class="alert alert-info" role="alert">
              <span class="me-2">Short URL is:</span>
              <!-- The text field -->
              <input type="text" value="{{shortenURL}}" id="myInput" class="col-md-6" style="border:2px #737373; border-radius:5px; height:50px; width:520px">
              <!-- The button used to copy the text -->
              <button type="button" class="btn btn-outline-primary btn-sm ms-3" onclick="copyFunction()">Copy</button>
              <script>
                function copyFunction() {
                    // Get the text field
                    const copyText = document.getElementById("myInput");
                    // Select the text field
                    copyText.select();
                    copyText.setSelectionRange(0, 99999); // For mobile devices
                    // Copy the text inside the text field
                    navigator.clipboard.writeText(copyText.value)
                  }
              </script>
            </div>
            <div class="d-flex justify-content-center">
              <button class="btn btn-success " type="submit">Shorten URL</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>